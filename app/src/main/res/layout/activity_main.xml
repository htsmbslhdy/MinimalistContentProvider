<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.android.minimalistcontentprovider.MainActivity">
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="response: "
		android:id="@+id/textview"/>

	<Button
		android:id="@+id/button_display_all"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textview"
		android:layout_marginEnd="35dp"
		android:layout_marginRight="35dp"
		android:layout_marginTop="90dp"
		android:layout_toLeftOf="@+id/button_display_first"
		android:layout_toStartOf="@+id/button_display_first"
		android:onClick="onClickDisplayEntries"
		android:text="List all words" />

	<Button
		android:id="@+id/button_display_first"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBaseline="@+id/button_display_all"
		android:layout_alignBottom="@+id/button_display_all"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginEnd="37dp"
		android:layout_marginRight="37dp"
		android:onClick="onClickDisplayEntries"
		android:text="list First Word" />

</RelativeLayout>
